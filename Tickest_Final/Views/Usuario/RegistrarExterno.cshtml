@model Tickest_Final.Models.usuario

@{
    ViewData["Title"] = "Registrar Usuario Externo";
}

<h2>Registrar Usuario Externo</h2>

<form asp-action="RegistrarExterno" method="post">
    <div class="form-group">
        <label for="nombre">Nombre</label>
        <input type="text" asp-for="nombre" class="form-control" required />
        <span asp-validation-for="nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="apellido">Apellido</label>
        <input type="text" asp-for="apellido" class="form-control" required />
        <span asp-validation-for="apellido" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="correo">Correo</label>
        <input type="email" asp-for="correo" class="form-control" required />
        <span asp-validation-for="correo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="telefono">Teléfono</label>
        <input type="text" asp-for="telefono" class="form-control" required />
        <span asp-validation-for="telefono" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="contrasena">Contraseña</label>
        <input type="password" asp-for="contrasena" class="form-control" required />
        <span asp-validation-for="contrasena" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Registrar</button>
</form>

@if (ViewBag.Message != null)
{
    <p class="text-success">@ViewBag.Message</p>
}

@if (ViewBag.ErrorMessage != null)
{
    <p class="text-danger">@ViewBag.ErrorMessage</p>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
