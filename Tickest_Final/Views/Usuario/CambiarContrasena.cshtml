@model Tickest_Final.Models.CambioContrasenaModel

@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<h2>Cambiar Contraseña</h2>

<form asp-action="CambiarContrasena" method="post">
    <div class="form-group">
        <label for="ContrasenaActual">Contraseña Actual</label>
        <input type="password" asp-for="ContrasenaActual" class="form-control" required />
        <span asp-validation-for="ContrasenaActual" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="NuevaContrasena">Nueva Contraseña</label>
        <input type="password" asp-for="NuevaContrasena" class="form-control" required />
        <span asp-validation-for="NuevaContrasena" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Cambiar Contraseña</button>
</form>

@if (ViewBag.Message != null)
{
    <p class="text-success">@ViewBag.Message</p>
}

@if (ViewBag.ErrorMessage != null)
{
    <p class="text-danger">@ViewBag.ErrorMessage</p>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
